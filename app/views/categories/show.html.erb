<div class="articles">
  <% @category_articles.each do |article| %>
    <div class= 'article'>
      <div class="card-body">
        <h5 class='current'><%= @category.name %></h5>
        <h5 class="card-text font-weight bold"><%= article.title %></h5>
        <p class="card-text"><%= truncate(article.text, length: 75) %>
        <%= link_to 'Read more', article_path(article), id: 'current' %>
        </p>
      </div>
    </div>
  <% end %>
</div>
