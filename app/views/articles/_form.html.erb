<div class="container">
  <div class="row justify-content-center">
    <div class="col-11">
      <%= render 'shared/errors', obj: @article %>
      <%= form_with(model: article, class: "shadow p-3 article-form form rounded", local: true) do |f| %>
        <div class="form-group row">
          <%= f.label :title, class: "col-2 col-form-label article-form-text-color font-weight-bold" %>
          <div class="col-10">
            <%= f.text_field :title, class: "form-control shadow rounded", placeholder: "Title of article" %>
          </div>
        </div>
        <div class="form-group row">
          <%= f.label :text, 'description', class: "col-2 col-form-label article-form-text-color font-weight-bold" %>
          <div class="col-10"> 
            <%= f.text_area :text, rows: 8, class: "form-control shadow rounded", placeholder: "Description of article" %>
          </div>
        </div>
        <div class="form-group row">
          <%= f.label :Categories, class: "col-2 col-form-label article-form-text-color font-weight-bolder" %>
          <div class="col-10 mt-2"> 
            <%= f.collection_check_boxes :category_ids, Category.all, :id, :name do |cb| %>
              <% cb.label(class: "d-inline input_checkbox mr-3 text-white font-weight-bold") {cb.check_box(class: "checkbox mr-1") + cb.text } %>
            <% end %>
            <%= f.label :image, class: "font-weight-bold article-form-text-color ml-3 d-inline" %>
            <%= f.file_field :image, accept: 'image/jpeg,image/gif,image/png', class: "text-white select-image d-inline" %>
          </div> 
        </div>
        <div class="form-group row justify-content-center">
          <%= f.submit class: "btn text-white btn-background-color btn-lg" %>
        </div>
      <% end %>
    </div>
  </div>
</div> 