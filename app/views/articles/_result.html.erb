<div class="col-sm-12">
  <%= render 'layouts/messages' %>
</div>

<% if @result %> 
  <table class="table table-bordered table-color">
    <thead>
      <tr>
        <th scope="col" class="text-white text-center alert alert-dismissible fade show" role="alert">
          <%= link_to article_path(@result), class: "text-white" do %>
            <%= @result.title %>
          <% end %>
          <button type="button" class="close" data-dismiss="alert" aria-label="Close">
            <span aria-hidden="true">&times;</span>
          </button>
        </th>
      </tr>
    </thead>
  </table>
<% end %>

